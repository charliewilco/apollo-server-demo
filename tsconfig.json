{
  "compilerOptions": {
    "lib": ["es2016"],
    "esModuleInterop": true,
    "typeRoots": ["types", "node_modules/@types"],
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["types/*", "api/**/*"]
}
